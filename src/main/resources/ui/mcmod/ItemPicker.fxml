<?xml version="1.0" encoding="UTF-8"?>

<?import com.github.mouse0w0.gridview.GridView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane styleClass="item-picker" stylesheets="@ItemPicker.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <FlowPane hgap="10.0" vgap="5.0" BorderPane.alignment="CENTER">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%ui.item_picker.filter"/>
                <TextField fx:id="filter"/>
                <RadioButton id="default" fx:id="normal" mnemonicParsing="false" selected="true"
                             text="%ui.item_picker.mode.default">
                    <toggleGroup>
                        <ToggleGroup fx:id="mode"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton id="ignore-metadata" fx:id="ignoreMetadata" mnemonicParsing="false"
                             text="%ui.item_picker.mode.ignore_metadata" toggleGroup="$mode"/>
                <RadioButton id="ore-dict" fx:id="oreDict" mnemonicParsing="false" text="%ui.item_picker.mode.ore_dict"
                             toggleGroup="$mode"/>
            </children>
         <padding>
             <Insets bottom="10.0"/>
         </padding>
      </FlowPane>
   </top>
   <bottom>
      <FlowPane alignment="CENTER_RIGHT" hgap="10.0" BorderPane.alignment="CENTER">
          <children>
              <Button mnemonicParsing="false" onAction="#onFinish" text="%common.ok"/>
              <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="%common.cancel"/>
          </children>
          <padding>
              <Insets top="10.0"/>
          </padding>
      </FlowPane>
   </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <GridView fx:id="gridView" prefHeight="400.0" prefWidth="660.0" BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
