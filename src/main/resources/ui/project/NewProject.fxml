<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <FlowPane alignment="CENTER_RIGHT" hgap="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onFinish" text="%common.finish"/>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="%common.cancel"/>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </FlowPane>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <GridPane hgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%ui.new_project.name"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%ui.new_project.path" GridPane.rowIndex="1"/>
                        <TextField fx:id="projectName" GridPane.columnIndex="1"/>
                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <TextField fx:id="projectPath" prefWidth="10000.0"/>
                                <Button mnemonicParsing="false" onAction="#onChooseProjectPath" text="...">
                                    <tooltip>
                                        <Tooltip text="%ui.new_project.choose_path"/>
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </GridPane>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                </Separator>
            </children>
        </VBox>
    </center>
</fx:root>
